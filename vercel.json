{
  "version": 2,
  "builds": [
    {
      "src": "main.py",
      "use": "@vercel/python",
      "config": {
        "installCommand": "python3 -m pip install -r requirements.txt",
        "buildCommand": "echo 'No build required'",
        "startCommand": "uvicorn main:app --host 0.0.0.0 --port $PORT"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "main.py"
    }
  ]
}